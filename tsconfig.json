{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "ES6",
    "rootDir": "./src", 
    "moduleResolution": "node",  
    "outDir": "./dist",
    "removeComments": true, 
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"],
}
